{
  "info": {
    "name": "Scalable Web App API",
    "_postman_id": "b9e1f8e0-0000-4000-8000-collection",
    "description": "Auth, Profile, Tasks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/health" }
    },
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/signup"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"secret123\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "if (data.token) {",
              "  pm.collectionVariables.set('token', data.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Profile Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/profile/me"
      }
    },
    {
      "name": "Profile Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated User\"\n}" },
        "url": "{{baseUrl}}/api/profile/me"
      }
    },
    {
      "name": "Tasks List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/tasks"
      }
    },
    {
      "name": "Task Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"title\": \"First Task\"\n}" },
        "url": "{{baseUrl}}/api/tasks"
      }
    },
    {
      "name": "Task Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"completed\": true\n}" },
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      }
    },
    {
      "name": "Task Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" }
  ]
}
